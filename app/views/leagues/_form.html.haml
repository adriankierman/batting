= form_for @league do |f|
  - if @league.errors.any?
    #error_explanation
      %h2= "#{pluralize(@league.errors.count, "error")} prohibited this league from being saved:"
      %ul
        - @league.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :league_name
    = f.text_area :league_name
  .field
    = f.label :season
    = f.text_field :season
  .actions
    = f.submit 'Save'
